<%- include("partials/header") -%>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-player-form" action="" method="POST" enctype="multipart/form-data">            
            <div class="form-group col-md-6">
                <label for="hovaten">Họ và tên</label>
                <input type="text" class="form-control" name="hovaten" id="hovaten" required>
            </div>
            <div class="form-group col-md-6">
                <label for="tuoi">Tuổi</label>
                <input type="number" class="form-control" name="tuoi" id="tuoi" required>
            </div>                        
            <div class="form-group col-md-6">XSA
                <label class="mr-1" for="gioitinh">Giới tính</label>
                <input type="radio" id="male" name="gioitinh" value="true" checked>
                <label for="male">Nam</label>
                <input type="radio" id="female" name="gioitinh" value="false">
                <label for="female">Nữ</label>            
            </div>
            <div class="form-group col-md-6">
                <label for="Status">Ngày nhập viện</label>
                <input type="date" name="ngaynhapvien" id="ngaynhapvien">
            </div>
            <div class="form-group col-md-6">
                <label for="first-name">Khoa</label>
                <select id="khoa" name="khoa" class="form-control" required>
                    <option selected disabled>Chọn khoa</option>
                    <option>Thần kinh</option>
                    <option>Sinh Lý</option>
                    <option>Da Liễu</option>                        
                </select>
                <!-- <input type="text" class="form-control" name="khoa" id="khoa"> -->
            </div>  
            <div class="form-group col-md-6">
                <label for="first-name">Ghi chú</label>
                <input type="text" class="form-control" name="ghichu" id="ghichu"   >
            </div>
            <div class="col-md-6">
                <label for="player-img"><b>Player Image</b></label><br>
                <input type="file" name="image" id="player-img" class="" required>
            </div>
            <button type="submit" class="form-group btn btn-primary col-md-6 mt-2">Thêm</button>
        </form>
    </div>
</div>
</body>
</html>